<h1>Отзывы</h1>

<table>
  <tr>
    <th>От</th>
    <th>Отзыв</th>
    <th></th>
  </tr>

<% @feedbacks.each do |feedback| %>
  <tr>
    <td><%= feedback.email %></td>
    <td><%= feedback.text %></td>
    <td><%= link_to 'Show', [:admin, feedback] %></td>
    <td><%= link_to 'Destroy', [:admin, feedback], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

