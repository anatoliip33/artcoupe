<h2 id="poz"><strong><%= 'Materials' %></strong></h2>
 <ul class = "pagination">
      <%= will_paginate @materials %>
  </ul>
<table class="table">
  <tr>
    <th><%= 'File image' %></th>
    <th><%= 'Title' %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @materials.each do |material| %>
  <tr>
    <td>
      <ul class="photo-list">
        <li>
              <%= image_tag(material.image) %>
        </li>
      </ul>
    </td>
    <td><div class="move"><%= material.title %></div></td>
    <td><%= link_to 'Show', admin_material_path(material) %></td>
    <td><%= link_to 'Edit', edit_admin_material_path(material) %></td>
    <td><%= link_to 'Destroy', admin_material_path(material), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>
<div class="btncreate">
<%= link_to 'Create', new_admin_material_path, :class => "btn btn-primary" %>
</div>
	<br />